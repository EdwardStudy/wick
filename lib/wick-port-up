#!/bin/bash
wick-port-up() {
    local PORT RESULT

    PORT=$2

    case $1 in
        tcp|TCP)
            RESULT=$(netstat -ln | awk '$1 == "tcp" && $4 ~/:'$PORT'$/ && $6 == "LISTEN" {print $4}')
            ;;

        udp|UDP)
            RESULT=$(netstat -ln | awk '$1 == "udp" && $4 ~/:'$PORT'$/ {print $4}')
            ;;

        *)
            wick-error "Only accepts 'tcp' or 'udp', not '$2'"
            return 2
            ;;
    esac

    if [[ $RESULT == "" ]]; then
        return 1
    fi

    return 0
}
