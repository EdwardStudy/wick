#!/bin/bash

apache2-add-conf() {
    local OS

    eval "wick-info 'Adding Apache2 config: $@'"
    wick-explorer OS wick-base os

    case "$OS" in
        redhat|centos)
            install-formula-file "$@" /etc/httpd/conf.d/
            wick-service reload httpd
            ;;

        *)
            install-formula-file "$@" /etc/apache2/conf-available
            a2enconf "$1"
            wick-service reload apache2
            ;;
    esac
}
