#!/usr/bin/env bash

wick-make-dir() {
    local DEST MODE OWNER

    wickGetOption MODE mode "$@"
    wickGetOption OWNER owner "$@"
    wickGetArgument DEST 0 "$@"
    wickDebug "Making directory: $DEST"
    mkdir -p "$DEST"

    if [ ! -z "$OWNER" ]; then
        wickDebug "Changing ownership: $OWNER"
        chown "$OWNER" "$DEST"
    fi

    if [ ! -z "$MODE" ]; then
        wickDebug "Changing mode: $MODE"
        chmod "$MODE" "$DEST"
    fi
}
