#!/bin/bash

formula-template() {
    local ENGINE

    ENGINE=${1##*.}

    if [[ ! -f "$1" ]]; then
        wick-error "Template not found: $1"

        return 1
    fi

    "formula-template-$ENGINE" "$1"
}

formula-template-sh() {
    (
        /bin/sh "$1"
    )
}

formula-template-bash() {
    (
        . "$1"
    )
}

