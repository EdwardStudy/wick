#!/bin/bash

formula-template() {
    local ENGINE TEMPLATE

    ENGINE=${1##*.}
    TEMPLATE="$WICK_FORMULA_DIR/templates/$SRC"

    if [[ ! -f "$TEMPLATE" ]]; then
        wick-error "Template not found: $TEMPLATE"

        return 1
    fi

    "formula-template-$ENGINE" "$WICK_FORMULA_DIR/templates/$SRC"
}

formula-template-sh() {
    (
        /bin/sh "$1"
    )
}

formula-template-bash() {
    (
        . "$1"
    )
}

